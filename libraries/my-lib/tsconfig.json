{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": false,

    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "typeRoots": ["node_modules/@types"],
    "paths": {
        "*": ["node_modules/*", "types/*"]
    }
  },
  "exclude": ["node_modules", "tests/**/*", "dist"]
}
